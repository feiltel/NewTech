<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="8dp"
    android:background="?attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/cov_im"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textSize="16sp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/cov_im"
        app:layout_constraintLeft_toRightOf="@id/cov_im"
        android:id="@+id/cov_tv"
        android:lines="1"
        android:textColor="@android:color/black"
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/cov_tv"
        app:layout_constraintLeft_toRightOf="@id/cov_im"
        app:layout_constraintRight_toLeftOf="@id/cov_tv1_1"
        android:id="@+id/cov_tv1"
        android:lines="1"
        android:text="月售500"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/cov_tv"
        app:layout_constraintLeft_toRightOf="@id/cov_tv1"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/cov_tv1_1"
        android:lines="1"
        android:text="32分钟 500m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView

        android:layout_marginTop="3dp"
        android:textSize="12sp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/cov_tv1"
        app:layout_constraintLeft_toRightOf="@id/cov_im"
        android:id="@+id/cov_tv2"
        android:lines="1"
        android:text="起送￥0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:padding="2dp"
        android:background="#CDDC39"
        android:layout_marginTop="4dp"
        android:textSize="11sp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/cov_tv2"
        app:layout_constraintLeft_toRightOf="@id/cov_im"
        android:id="@+id/cov_tv3"
        android:lines="1"
        android:text="起送￥0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>